# ===========================================
# FlowPilot - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# ===========================================

# OpenAI API Key (required for AI task extraction)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google OAuth Client ID (required for Calendar sync)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Optional: Allowed Origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://flowpilot-pro.onrender.com
